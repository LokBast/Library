@{
    ViewBag.Title = "Библиотека";
}

<div>
    <h3><p align="center"><b>Библиотека</b></h3>
    

    <table>
        <tr>
            <td><p>Название</p></td>
            <td><p><blockquote>Автор</blockquote></p></td>
            <td><p>Жанр</p></td>
            <td></td>
        </tr>


        @foreach (var books in ViewBag.Books)
        {
            <tr>
                <td><p>@books.BookId</p></td>
                <td><p><blockquote> @books.Author</blockquote></p></td>
                <td><p> @books.Genre</p></td>
                <td><p><li>@Html.ActionLink("Зарезервировать", "Reserve", "Home")</li></p></td>
            </tr>
        }

    </table>
</div>